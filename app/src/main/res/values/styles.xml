<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#009688</item>
    </style>


    <!-- Style for a the big title TextView. -->
    <style name="BigTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#263228</item>
    </style>

    <!-- Style for the little text under the title explanation. -->
    <style name="LittleTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#37424F</item>
    </style>

    <!-- Style for question titles. -->
    <style name="QuestionTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#78908C</item>
    </style>

    <!-- Style for question text. -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#37424F</item>
    </style>

    <!-- Style for radio buttons. -->
    <style name="RadioAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#37424F</item>
    </style>

    <!-- Separation lines between the questions. -->
    <style name="SeparationLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#009688</item>
    </style>

    <!-- CheckMyDay button style. -->
    <style name="CheckMyDayButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#009688</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Submit quizz button. -->
    <style name="SubmitButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#009688</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">16sp</item>"
    </style>
    
</resources>
